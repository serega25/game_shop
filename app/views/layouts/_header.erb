<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to 'Home page', root_path, id: "logo" %>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= render partial: "cart/cart_link" %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  Profile <i class="fa-regular fa-user"></i>
                <% end %>
              </li>
              <li>
                <%= link_to orders_index_path(user_id: current_user.id) do %>
                  My Orders <i class="fa-solid fa-cart-arrow-down"></i>
                <% end %>
              </li>
              <li class="divider"></li>
              <li class="logout-li">
                <%= button_to "Log out", destroy_user_session_path,method: :delete, data: { turbo: false } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path, data: { turbo: false } %></li>
          <li><%= link_to "Admin Panel", new_admin_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
